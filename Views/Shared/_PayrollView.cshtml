@model PayrollWebApp.Models.PayrollEntity


<h1>UserPayroll</h1>

<div>
    <h4>PayrollEntity</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employees.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employees.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Designations.DesignationType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Designations.DesignationType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Designations.BaseSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Designations.BaseSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Month)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Month)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bonus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bonus)
        </dd>
        <dt class="col-sm-2">
            Total
        </dt>
        <dd class="col-sm-10">
            @{
                var total = Model.Bonus + Model.Designations.BaseSalary;
                <p>@total</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="DownloadPDF" asp-route-id="@Model.PayrollId">Download PaySlip</a> |
    <a asp-action="">Back</a>
</div>

